<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/_15sdp"
    android:layout_marginBottom="@dimen/_10sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/_10sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/layoutDetails"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:src="@drawable/avatar1" />

        <LinearLayout
            android:id="@+id/layoutDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image"
            android:layout_marginStart="@dimen/_10sdp">

            <TextView
                android:id="@+id/disaster_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disaster Name"
                android:textColor="@color/colortext"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/sourcesanssemibold"/>

            <TextView
                android:id="@+id/disaster_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disaster Details"
                android:textColor="@color/colortext"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/sourcesanssemibold"/>
        </LinearLayout>

        <TextView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/layoutDetails"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/disaster_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disaster Time"
            android:layout_marginTop="@dimen/_2sdp"
            android:textColor="@color/colortext"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/sourcesanssemibold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>