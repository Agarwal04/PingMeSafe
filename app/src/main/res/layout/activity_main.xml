    tools:context="com.example.pingmesafe.MainActivity">

    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_320sdp"
            android:src="@drawable/login_pic"
            android:gravity="top"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            android:fitsSystemWindows="true"
            android:cropToPadding="false"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/elipse"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iconback"
            android:scaleY="1.6"
            android:scaleX="1.6"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_25sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_170sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="PingMeSafe"
                android:textSize="@dimen/_29ssp"
                android:textColor="@color/white"
                android:fontFamily="@font/interbold"/>

            <TextView
                android:layout_width="350sp"
                android:layout_height="match_parent"
                android:text="An open source disaster recovery and managementÂ app"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/intermedium"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <include layout="@layout/login_layout"
                android:layout_height="@dimen/_430sdp"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_210sdp" />

        </LinearLayout>


    </RelativeLayout>



